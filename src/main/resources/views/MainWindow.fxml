<AnchorPane prefHeight="400.0" prefWidth="600.0" xmlns="http://javafx.com/javafx/10.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="edu.sdu.sensumbosted.presentation.MainWindowController">
    <children>
        <TabPane layoutX="298.0" layoutY="363.0" prefHeight="439.0" prefWidth="984.0" tabClosingPolicy="UNAVAILABLE">
            <tabs>
                <Tab fx:id="diaryTab" text="Dagbog">
                    <content>
                        <AnchorPane minHeight="0.0" minWidth="0.0" prefHeight="180.0" prefWidth="200.0">
                     <children>
                        <ListView fx:id="diaryList" prefHeight="405.0" prefWidth="235.0" />
