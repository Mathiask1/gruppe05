                     </children></AnchorPane>
                    </content>
                </Tab>
                <Tab fx:id="calendarTab" text="Kalender">
                    <content>
                        <AnchorPane minHeight="0.0" minWidth="0.0" prefHeight="388.0" prefWidth="510.0" />
                    </content>
                </Tab>
                <Tab fx:id="administrationTab" text="Administration">
                    <content>
                        <AnchorPane minHeight="0.0" minWidth="0.0" prefHeight="180.0" prefWidth="200.0" />
                    </content>
                </Tab>
            </tabs>
        </TabPane>
        <ToolBar layoutX="296.0" prefHeight="40.0" prefWidth="984.0">
            <items>
                <Button fx:id="newUserButton" mnemonicParsing="false" onMouseClicked="#newUserClicked" text="Ny Bruger" />
