        </ToolBar>
        <ListView fx:id="userList" layoutY="78.0" prefHeight="722.0" prefWidth="298.0" />
        <TextArea editable="false" prefHeight="75.0" prefWidth="298.0" text="Brugere" />
        <Text fx:id="userName" layoutX="322.0" layoutY="110.0" strokeType="OUTSIDE" strokeWidth="0.0" text="Select User!">
            <font>
                <Font size="30.0" />
            </font>
        </Text>
        <Text fx:id="userRole" layoutX="322.0" layoutY="150.0" strokeType="OUTSIDE" strokeWidth="0.0" text="Text">
            <font>
                <Font size="20.0" />
            </font>
        </Text>
        <Text fx:id="userDepartment" layoutX="322.0" layoutY="184.0" strokeType="OUTSIDE" strokeWidth="0.0" text="Text">
            <font>
                <Font size="20.0" />
            </font>
        </Text>
    </children>
